<div >
    <div class="container"

        <!-- Fila 1 INICIO -->
        <div class="row">
            <h6>Hola {{ UserName }} Bienvenido!</h6>
            <p class="text-end">
                <a class="btn btn-danger btn-sm" href="/admin/logout"> Cerrar Sesion
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
        <!-- Fila 1 FIN -->
        <!-- Fila 2 INICIO -->
        <div class="row">
            <div class="col-7">
                <h3>Listado de Medios</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-success btn-sm" href="/admin/AgregarMedioPage/AgregarMedioPageAlta" method="POST">
                    <i class="fa fa-plus" aria-hidden="true"></i> Nuevo
                </a>
            </div>
        </div>
        <!-- Fila 2 FIN -->
        <!-- Fila 3 INICIO -->
        <div class="row">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">Id</th>
                            <th scope="col">Logo</th> 
                            <th scope="col">Descripcion</th>
                            <th scope="col">Pagina</th>
                            <th scope="col">Tel/Movil</th>
                            <th scope="col">FchHoraAlta</th>

                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each medios}}
                        <tr>
                            <th scope="row">{{medios.IdMedio}}</th>
                            <!-- <td> <img src="/images/medios/{{Logo}}" width="100" height="100"  alt="{{Descripcion}}"> </td> -->
                            <td>{{{medios.Logo}}}</td>
                            <td>{{medios.Descripcion}}</td>
                            <td>{{medios.URL}}</td>
                            <td>{{medios.WhatsApp}}</td>
                            <td>{{medios.FchHoraAlta}}</td>

                            <td class="text-end">
                                <a href="/Admin/AgregarMedioPage/AgregarMedioPageModificar/{{medios.IdMedio}}"
                                    class="btn btn-secondary "
                                    style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .55rem;">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <a href="/Admin/AgregarMedioPage/AgregarMedioPageEliminar/{{medios.IdMedio}}"
                                    class="btn btn-secondary "
                                    style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .55rem;">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
        <!-- Fila 3 FIN -->
    </div>
</div>
